<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckoutActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Detail pengambilan sampah"
        android:textColor="@color/hitam_teks"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="27dp"
        android:src="@drawable/profil_dummy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/tvNama2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Firman Kurnianto"
        android:textColor="@color/hitam_teks"
        android:textSize="16dp"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="23dp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView4"/>

    <LinearLayout
        android:id="@+id/garis3"
        android:background="@color/abu_abu"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"/>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ljenis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/garis3">

        <ImageView
            android:src="@drawable/ic_sampah_plastik"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <TextView
            android:text="Sampah Plastik"
            android:textSize="14dp"
            android:textColor="@color/hitam_teks"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/lOpsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/ljenis">

        <ImageView
            android:src="@drawable/ic_pickup"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <TextView
            android:text="Gerobak"
            android:textSize="14dp"
            android:textColor="@color/hitam_teks"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/lBerat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/lOpsi">

        <ImageView
            android:src="@drawable/ic_timbangan"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <TextView
            android:text="5 kg"
            android:textSize="14dp"
            android:textColor="@color/hitam_teks"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/lTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/lBerat">

        <ImageView
            android:src="@drawable/ic_wallet"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <TextView
            android:text="Rp 30.000"
            android:textSize="14dp"
            android:textColor="@color/hitam_teks"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/lAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/lTotal">

        <ImageView
            android:src="@drawable/ic_lokasi"
            android:layout_width="35dp"
            android:layout_height="35dp"/>
        <TextView
            android:text="Jl Manduro no 1 Kratonan, Serengan,Kota Surakarta, Jawa Tengah"
            android:textSize="14dp"
            android:textColor="@color/hitam_teks"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/garis4"
        android:background="@color/abu_abu"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lAlamat"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="157dp"
        android:layout_height="108dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="26dp"
        android:src="@drawable/sampah1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/garis4" />

    <ImageView
        android:layout_width="157dp"
        android:layout_height="108dp"
        android:src="@drawable/sampah2"
        android:layout_marginTop="26dp"
        android:layout_marginRight="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/garis4"/>

    <LinearLayout
        android:id="@+id/garis5"
        android:background="@color/abu_abu"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"/>

    <Button
        android:id="@+id/btnLihatMaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_hijau"
        android:fontFamily="@font/poppins_semibold"
        android:text="Lihat Google Maps"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/garis5"/>

    <Button
        android:id="@+id/btnSelesai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_putih"
        android:fontFamily="@font/poppins_semibold"
        android:text="Selesai"
        android:textAllCaps="false"
        android:textColor="@color/hijau"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLihatMaps"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSelesai"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>